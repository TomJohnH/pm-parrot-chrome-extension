{
    "manifest_version": 2,
    "name": "Random Sentence Extension",
    "version": "1.0",
    "description": "Displays a random sentence from a predefined list.",
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "parrot_16.png",
            "48": "parrot_48.png",
            "128": "parrot_128.png"
        }
    },
    "permissions": [
        "activeTab"
    ]
}